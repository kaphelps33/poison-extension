{
    "manifest_version": 2,
    "name": "Poision",
    "version": "0.0.1",

    "description": "Poisions YouTube for productivity reasons. Delays the page loading, more features soon...",

    "icons": {
        "48": "icons/icon.png"
    },

    "permissions": ["activeTab"],

    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Poision",
        "default_popup": "popup/main.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["poision.js"]
        }
    ]
}